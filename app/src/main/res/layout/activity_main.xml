<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">
    <TextView
        android:text="@string/txtConvertFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtConvertFrom" android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />
    <TextView
        android:text="@string/txtConvertTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtConvertTo"
        app:layout_constraintTop_toBottomOf="@+id/spnFrom" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp" />
    <Spinner
        android:layout_width="201dp"
        android:layout_height="19dp"
        android:id="@+id/spnFrom"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtConvertFrom"
        android:entries="@array/listCurrencies"
        android:layout_marginLeft="8dp" />
    <Spinner
        android:layout_width="374dp"
        android:id="@+id/spnTo"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtConvertTo"
        android:layout_height="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:entries="@array/listCurrencies" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
        android:text="@string/toConvert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnConvert"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:background="@color/yellow"
        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtResultConvert"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtNumber"
        app:layout_constraintStart_toEndOf="@+id/spnFrom" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txtConvertTo"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtResultConvert" android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/spnTo" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/txtResult" android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintHorizontal_bias="0.0"
        android:textAlignment="center"/>
    <TextView
        android:text="@string/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtResult" android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/spnTo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>